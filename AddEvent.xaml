<Window x:Class="WPFProg6221ICE.NewEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create New Event" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="TitleTextBox" Text="Title" Foreground="Gray" 
         GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Margin="0,0,0,10"/>
            <DatePicker x:Name="DatePicker" Margin="0,0,0,10"/>
            <TextBox x:Name="TypeTextBox" Text="Type" Foreground="Gray" 
         GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Margin="0,0,0,10"/>
            <TextBox x:Name="DepartmentTextBox" Text="Department" Margin="0,0,0,10"/>
            <ComboBox x:Name="StatusComboBox" Margin="0,0,0,10">
                <ComboBoxItem Content="Confirmed"/>
                <ComboBoxItem Content="Pending"/>
                <ComboBoxItem Content="Cancelled"/>
            </ComboBox>
            <TextBox x:Name="DescriptionTextBox" Text="Description" Foreground="Gray" 
         GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Margin="0,0,0,10"/>
            <TextBox x:Name="MaxAttendeesTextBox" Text="Max Attendees" Foreground="Gray" 
         GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Margin="0,0,0,10"/>
            <Button Content="Create Event" Click="OnCreateEventClick"/>
        </StackPanel>
    </Grid>
</Window>
